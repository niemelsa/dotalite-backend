generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  uid       String     @unique
  name      String
  image     String?
  email     String?    @unique
  playerId  String?
  favorites Favorite[]
}

model Favorite {
  id          Int    @id @default(autoincrement())
  image       String
  favorite    String
  userId      Int
  type        String
  favoritedBy User   @relation(fields: [userId], references: [id])
}
